/* Every post, on every page, gets this style on its <article> tag */
.post
  position: relative
  width: 80%
  max-width: 720px
  margin: 4rem auto
  padding-bottom: 4rem
  word-break: break-word
  hyphens: auto
  text-align: justify

  .post-content
    p:first-child
      :not(blockquote p)
        display: none

  /* Make sure the references are smaller */
  #references + ul
    padding-left: 0

    li
      font-size: 1.4rem
      line-height: 1.6em
      list-style: none
      margin-bottom: 2rem
      text-align: left


.home-template
  .post
    border-bottom: darken(body-background, 15%) 1px solid

    /* Add a little circle in the middle of the border-bottom on our .post */
    &:after
      background: darken(body-background, 15%)  // inside the circle
      border: darken(body-background, 12%) 1px solid // circle border
      border-radius: 100%
      box-shadow: body-background 0 0 0 5px // around the circle
      bottom: -5px
      display: block
      content: ''
      height: 7px
      left: 50%
      margin-left: -5px
      position: absolute
      width: 7px
  .post-title
    text-align: center

