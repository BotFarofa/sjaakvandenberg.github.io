// ==========================================================================
// 5. Single Post - When you click on an individual post
// ==========================================================================

/* Keep large images within the bounds of the post-width */
.post-content
  img
    display: block
    max-width: 100%
    margin: 0 auto
    height: auto
    box-shadow: 1px 1px 7px darken(body-background, 15%)
    border-radius: 4px

  .noshadow
    box-shadow: none
    border-radius: 0

  .logos
    display: inline-block
    clear: both

/* The author credit area after the post */
.post-footer
  position: relative
  margin: 4rem 0 0 0
  padding: 4rem 0 4rem 0
  border-top: darken(body-background, 15%) 1px solid

  &:before
    display: block
    content: ''
    width: 7px
    height: 7px
    border: darken(body-background, 12%) 1px solid // circle border
    position: relative
    top: -45px
    left: 50%
    margin-left: -5px
    background: darken(body-background, 15%)  // inside the circle
    border-radius: 100%
    box-shadow: body-background 0 0 0 5px // around the circle

  h4
    font-size: 1.8rem
    margin: 0

  p
    margin: 1rem 0
    // font-size: 1.4rem
    line-height: 1.6em

  .author
    margin-left: 90px

  .author-img
    max-height: 80px
    position: absolute

/* Add a little circle in the middle of the border-top on our #comment */
#comment
  border-top: darken(body-background, 15%) 1px solid
  padding-top: 20px

