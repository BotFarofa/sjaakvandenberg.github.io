// ==========================================================================
// 7. Pagination - Tools to let you flick between pages
// ==========================================================================

/* The main wrapper for our pagination links */
.pagination
  position: relative
  width: 80%
  max-width: 720px
  margin: 4rem auto
  font-family: 'Open Sans', sans-serif
  font-size: 1.3rem
  color: body-accent
  text-align: center

  a
    color: body-accent

/* Push the previous/next links out to the left/right */
.older-posts
.newer-posts
  position: absolute
  display: inline-block
  padding: 0 15px
  border: lighten(gray, 60%) 2px solid
  text-decoration: none
  border-radius: 30px
  transition: border ease 0.3s

.older-posts
  right: 0

.page-number
  display: inline-block
  padding: 2px 0

.newer-posts
  left: 0

.older-posts:hover
.newer-posts:hover
  border-color: body-accent

// ==========================================================================
// 8. Footer - The bottom of every page
// ==========================================================================

.site-footer
  position: relative
  margin: 8rem 0 0 0
  padding: 4rem 0
  border-top: darken(body-background, 15%) 1px solid
  font-family: 'Open Sans', sans-serif
  font-size: 1.3rem
  line-height: 1.7em
  color: lighten(body-font, 50%)
  text-align: center
  background: darken(body-background, 5%)

  a
    color: lighten(body-font, 20%)
    font-weight: 700
    text-decoration: none

  .blog-pubkey
    color: lighten(body-font, 20%)
    font-family: Source Code Pro, monospace, sans-serif
    font-weight: 500
    margin: 0 0 0.5em 0

.poweredby .icon-hexo
  font-weight: 700
  text-decoration: none

  &:hover
    text-decoration: none

  &:before
    font-size: 1rem
    margin-right: 0.2em

/* The subscribe icon on the footer */
.subscribe
  width: 28px
  height: 28px
  position: absolute
  top: -14px
  left: 50%
  margin-left: -15px
  border: darken(body-background, 15%) 1px solid
  text-align: center
  line-height: 2.4rem
  border-radius: 50px
  background: body-background
  transition: box-shadow 0.5s

  /* The RSS icon, inserted via icon font */
  &:before
    color: orange
    font-size: 10px
    position: absolute
    top: 9px
    left: 9px
    font-weight: bold
    transition: color 0.5s ease

  /* Add a box shadow to on hover */
  &:hover
    background: lighten(body-background, 25%)
    box-shadow: rgba(darken(body-background, 10%), 0.5) 0 0 0 3px
    transition: box-shadow 0.25s

    &:before
      color: body-font

    /* On hover, show the tooltip! */
    .tooltip
      opacity: 1
      top: -33px

/* CSS tooltip saying 'Subscribe!' - initially hidden */
.tooltip
  background: body-font
  color: body-background
  opacity:0

  border-radius: 3px
  box-shadow: 0 1px 4px rgba(black, 0.1)
  display: inline-block
  left: -21px
  padding: 4px 8px 5px 8px
  position: absolute
  top: -23px
  transition: opacity 0.3s ease, top 0.3s ease

  font-size: 1.1rem
  line-height: 1em
  text-align: center

  /* The little chiclet arrow under the tooltip, pointing down */
  &:after
    content: ''
    border-width: 5px 5px 0 5px
    border-style: solid
    border-color: body-font transparent
    display: block
    position: absolute
    bottom: -4px
    left: 50%
    margin-left: -5px
    width: 0
    z-index: 220

