// ==========================================================================
// 3. Utilities - These things get used a lot
// ==========================================================================

/* Hides shit */
.hidden
  text-indent: -9999px
  visibility: hidden
  display: none

/* Creates a responsive wrapper that makes our content scale nicely */
.inner
  position: relative
  width: 80%
  max-width: 560px
  margin: 0 auto

/* Centres vertically yo. (IE8+) */
.vertical
  display: table-cell
  vertical-align: middle

/* Centres horizontally bro. */
.center
  text-align: center

/* Float to the left */
.left
  float: left

/* Or float to the right */
.right
  float: right

/* Vertical timeline */
.timeline
  list-style: none
  margin: 0
  padding: 2rem 0 0 0

  br
    display: none

.timeline > li
  overflow: hidden
  margin: 0
  position: relative

.timeline-date
  width: 60px
  float: left
  margin: 0
  font-weight: bold
  color: blue

.timeline-content
  border-left: 4px darken(body-background, 5%) solid
  margin-left: 60px
  padding: 0 0 20px 25px

  h2
    font-size: 2.2rem
    margin: 0 0 20px 0

  p
    margin: 0 0 20px 0

  &:before
    content: ''
    width: 12px
    height: 12px
    background: blue
    position: absolute
    left: 56px
    top: 8px
    border-radius: 100%

