<header class="site-head">
  <div class="vertical">
    <div class="site-head-content inner">
      <% if (theme.logo) { %><a class="blog-logo" href="<%- config.root %>"><img src="<%- theme.logo %>" alt="<%- config.title %>"/></a> <% } %>
      <h1 class="blog-title">
        <a href="/" alt="<%- config.title %>"><%- config.title %></a>
      </h1>
      <p class="blog-description"><%- config.description %></p>
    </div>
  </div>
</header>

<main class="content" role="main">
  <article class="post">
    <section class="post-content">
      <%- post.content %>
    </section>
  </article>
</main>
